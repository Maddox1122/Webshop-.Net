@page
@model UpdateModel
@{
    ViewData["Title"] = "Update Page";
}

<div class="container mt-5">
    <h1 class="display-4">Fietskleding.nl - Fietsshirt Bijwerken</h1>

    <form method="post" enctype="multipart/form-data">
        <div class="form-group mt-2">
            <label asp-for="Product.Naam">Naam:</label>
            <input asp-for="Product.Naam" class="form-control" />
            <span asp-validation-for="Product.Naam" class="text-danger"></span>
        </div>

        <div class="form-group mt-2">
            <label asp-for="Product.Prijs">Prijs:</label>
            <input asp-for="Product.Prijs" class="form-control" />
            <span asp-validation-for="Product.Prijs" class="text-danger"></span>
        </div>

        <div class="form-group mt-2">
            <label asp-for="Upload">Upload Afbeelding:</label>
            <input type='file' asp-for="Upload" class="form-control-file" />
            <span asp-validation-for="Upload" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary mt-2">Fietsshirt Bijwerken</button>
    </form>
</div>
